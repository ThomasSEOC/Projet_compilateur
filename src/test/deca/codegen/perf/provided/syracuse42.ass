; start main program
	TSTO #3
	BOV stack_overflow_error
	ADDSP #3
	LOAD #42, R2
	STORE R2, 1(GB)
	LOAD #0, R2
	STORE R2, 2(GB)
; Beginning of main instructions:
while_1_start:
	LOAD 1(GB), R2
	CMP #1, R2
	BEQ while_1_end
while_1_body:
	LOAD 1(GB), R2
	LOAD R2, R0	; simplify modulo using shifts
	SHR R0
	SHL R0
	SUB R0, R2
	CMP #0, R2
	BNE if_1_else
if_1_then:
	LOAD 1(GB), R2
	SHR R2
	STORE R2, 1(GB)
	BRA if_1_end	; jump to end of if statement
if_1_else:
	LOAD 1(GB), R2
	SHL R2
	LOAD 1(GB), R3
	ADD R3, R2	; Plus
	ADD #1, R2	; Plus
	STORE R2, 1(GB)
if_1_end:
	LOAD 2(GB), R2
	ADD #1, R2	; Plus
	STORE R2, 2(GB)
	BRA while_1_start
while_1_end:
	LOAD 2(GB), R1
	WINT
	WNL
	HALT
