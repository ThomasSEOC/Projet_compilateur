	TSTO #8
	BOV stack_overflow_error
	ADDSP #8
; create instance of class A
	NEW #2, R0
	BOV heap_overflow_error
	PUSH R0
	BSR Code.A.Init
	POP R2
	STORE R2, 7(GB)
; Beginning of main instructions:
	LOAD #1, R3
	CMP #0, R3
	BEQ if_1_else
	ADDSP #2
	LOAD 7(LB), R0
	CMP #null, R0
	BEQ dereferencement_null_error
